<%= form_for @iphone, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :services, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :services,['ATT Iphone 3g/3gs/4/4s/5 (1-7 days) $70. 100% success','ATT Iphone 4/4s/5/5s/5c (1-24 Hours) $120. 100% success','ATT Iphone 5c/5s Clean Imei (1-14days) $80. 100% success','TMOBILE USA Iphone (5-15 days) $125. 100% success','Verizon Iphone (1-3 days) $100. 100% success'], :prompt => 'Select one' ,:class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "IMEI#", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :imei, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :response_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :response_email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :text_alert, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text_alert, :class => 'text_field' %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                iphones_path, :class => 'btn' %>
  </div>
<% end %>
